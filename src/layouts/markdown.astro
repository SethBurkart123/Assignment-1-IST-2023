---
import Main from "./main.astro";

const {frontmatter} = Astro.props;
---

<Main>
  <div class="pt-32 w-screen flex content-center justify-center flex-wrap">
    <article class="backdrop-blur-3xl outline z-10 px-4 py-4 rounded-lg">
      <h1 class="text-5xl">{frontmatter.title}</h1>
      <h2 class="text-3xl mt-4">By {frontmatter.author}</h2>
      <div class="outline-"></div>
      <div class="prose prose-xl prose-neutral prose-h1:text-white prose-h2:text-white prose-h3:text-white prose-code:text-gray-400 prose-p:text-gray-200 prose-strong:text-gray-100">
        <p>{frontmatter.description}</p>
        <slot />
      </div>
    </article>
  </div>
</Main>