---
import { Pages } from "../content/products.astro";

const { backHidden } = Astro.props;
const pages = Pages();
---

<body class="bg-black">
  <div class="mx-auto max-w-2xl py-16 px-4 sm:py-24 sm:px-6 lg:max-w-7xl lg:px-8">
    <a href="/" class="text-2xl font-bold tracking-tight flex text-gray-200 hover:text-white gap-4">
      { !backHidden &&
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
        </svg>
      }
      Items
    </a>
    <div class="mt-6 grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
      { pages.map((page) =>
        <div class="group relative" style={ page.name === 'Hidden' ? "display: none" : "" }>
          <div class="min-h-80 aspect-w-1 aspect-h-1 w-full overflow-hidden rounded-md bg-gray-200 group-hover:opacity-75 lg:aspect-none lg:h-80">
            <img src={`${page.image}`} alt="Product image." class="h-full w-full object-cover object-center lg:h-full lg:w-full">
          </div>
          <div class="mt-4 flex justify-between">
            <div>
              <h3 class="text-sm text-gray-300">
                <a href={`shop/${page.slug}`}>
                  <span aria-hidden="true" class="absolute inset-0"></span>
                  {page.name}
                </a>
              </h3>
            </div>
            <p class="text-sm font-medium text-gray-100">{page.price}</p>
          </div>
        </div>
      )}
    </div>
  </div>
</body>