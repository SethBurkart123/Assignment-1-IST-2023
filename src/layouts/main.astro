---
import Cursor from "../components/Cursor.astro";

const props = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="description" content="Seth Burkart's IST Assignment" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>Seth Burkart</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/locomotive-scroll@3.5.4/dist/locomotive-scroll.css"
    />
  </head>
  <body class="w-screen h-screen overflow-hidden text-white bg-black">
    <div class="absolute border-b-white/40 border-b flex items-center w-screen justify-center z-10 top-0 left-0 text-center py-2 backdrop-blur-sm bg-white/10">
      <a href="/" class="z-20 text-2xl font-light px-4 py-2" style={props.hideMenu ? { 'display': 'none' } : { 'display': 'block' }}>Home</a>
      <a href="/pages/about" class="z-20 text-2xl font-light px-4 py-2" style={props.hideMenu ? { 'display': 'none' } : { 'display': 'block' }}>About</a>
      <a href="/pages/contact" class="z-20 text-2xl font-light px-4 py-2" style={props.hideMenu ? { 'display': 'none' } : { 'display': 'block' }}>Contact</a>
      <a href="/pages/games" class="z-20 text-2xl font-light px-4 py-2" style={props.hideMenu ? { 'display': 'none' } : { 'display': 'block' }}>Games</a>
      <a href="/shop" class="z-20 text-2xl font-light px-4 py-2" style={props.hideMenu ? { 'display': 'none' } : { 'display': 'block' }}>Shop</a>
    </div>
    <div data-scroll-container class="overflow-y-scroll min-h-screen wrapper">
      <slot />
    </div>
    <script is:inline src="https://cdn.blobity.dev/by.js"></script>
    <script is:inline>
      const options = {
        color: 'rgb(160, 160, 160)',
        dotColor: 'rgb(168 85 247)',
        mode: 'bouncy',
        zIndex: '11'
      };
      new Blobity(options);
    </script>
  </body>
</html>

<script
  is:inline
  src="https://cdn.jsdelivr.net/npm/locomotive-scroll@3.5.4/dist/locomotive-scroll.min.js"
></script>

<script is:inline>

  var scroll = new LocomotiveScroll({
    el: document.querySelector("[data-scroll-container]"),
    smooth: true,
    getDirection: true,
    lerp: 0.05,
    allowTouchMove: true,
    smartphone: {
      smooth: true,
    },
  });
</script>